<section class="food">
    <img class="food-photo" src="{{photo}}" />
    <div class="food-info">
        <p class="name">{{name}}</p>
        <p class="time">Time: {{time}}</p>
    </div>
    <div class="button-bar">
        <button class="see-more">Recipe <i class="fas fa-book-open"></i></button>
    </div>

    <div id="modal-backdrop" class="hidden match-modal"></div>
    <div id="recipe-modal" class="hidden match-modal">
        <div class="modal-dialog">
            <div class="modal-header">
                <h3>{{name}}</h3>
            <button type="button" class="modal-close-button" id="close-match-recipe-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-content-ing">
                    <div>Ingredients:</div>
                    <ul class="ingredients">
                        {{#each ingredients}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="modal-content-ins">
                    <div>Directions:</div>
                    <ul class="instructions">
                        {{#each directions}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
